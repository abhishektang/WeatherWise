<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="WeatherApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:WeatherApp"
    xmlns:views="clr-namespace:WeatherApp.Views"
    Title="WeatherApp"
    Shell.FlyoutBackgroundColor="#161B22"
    Shell.FlyoutBehavior="Flyout">

    <FlyoutItem Title="Weather" Icon="dotnet_bot.png">
        <ShellContent
            Title="Weather"
            ContentTemplate="{DataTemplate views:WeatherPage}"
            Route="WeatherPage" />
    </FlyoutItem>

    <FlyoutItem Title="Favorites" Icon="dotnet_bot.png">
        <ShellContent
            Title="Favorites"
            ContentTemplate="{DataTemplate views:FavoritesPage}"
            Route="FavoritesPage" />
    </FlyoutItem>

</Shell>
